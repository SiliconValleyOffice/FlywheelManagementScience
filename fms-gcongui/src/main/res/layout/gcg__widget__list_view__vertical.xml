<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/widget__supplemental_label"
        style="@style/GcgWidgetLabelHorizontalContainer"
        android:layout_gravity="right|center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/widget__label"
            style="@style/gcgLabel"
            android:layout_width="match_parent"
            android:layout_gravity="left"
            android:drawablePadding="6dp"
            android:gravity="left|bottom"
            android:textColor="@color/w3c__black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/widget__list_view"
                style="@style/GcgData"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@color/x11__WhiteSmoke"
                android:fadeScrollbars="false"
                android:hint="@string/gcg__android_contacts__select"
                android:scrollbarAlwaysDrawVerticalTrack="true" />

            <Button
                android:id="@+id/widget__add__button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="left|top"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/gcg__button_state_list__action__add_new" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>