<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/gcg__right_menu__width"
    android:layout_height="@dimen/fdk__keypad__height"
    android:background="@color/fdk__keypad__background"
    android:gravity="right"
    android:orientation="vertical" >

    <com.flywheelms.gcongui.fdk.widget.FdkKeypadButton
        android:id="@+id/fdk__button__clear_search"
        android:layout_width="@dimen/fdk__key__width"
        android:layout_height="@dimen/fdk__key__height"
		android:background="@drawable/fdk__button_state_list__clear_search"
        android:layout_marginTop="@dimen/fdk__top_key__margin_top" />

    <com.flywheelms.gcongui.fdk.widget.FdkKeypadButton
        android:id="@+id/fdk__button__space"
        android:layout_width="@dimen/fdk__key__width"
        android:layout_height="@dimen/fdk__key__height"
		android:background="@drawable/fdk__button_state_list__space__only"
        android:layout_marginTop="@dimen/fdk__key__margin_top" />

    <com.flywheelms.gcongui.fdk.widget.FdkKeypadButton
        android:id="@+id/fdk__button__delete_word"
        android:layout_width="@dimen/fdk__key__width"
        android:layout_height="@dimen/fdk__key__height"
		android:background="@drawable/fdk__button_state_list__delete_word__only"
        android:layout_marginTop="@dimen/fdk__key__margin_top" />
    
    <TextView
        android:layout_width="@dimen/fdk__key__width"
        android:layout_height="@dimen/fdk__key__height"
        android:layout_marginTop="@dimen/fdk__key__margin_top" />
    
    <TextView
        android:layout_width="@dimen/fdk__key__width"
        android:layout_height="@dimen/fdk__key__height"
        android:layout_marginTop="@dimen/fdk__key__margin_top" />
        

    <com.flywheelms.gcongui.fdk.widget.FdkKeypadButton
        android:id="@+id/fdk__button__cursor_right"
        android:layout_width="@dimen/fdk__key__width"
        android:layout_height="@dimen/fdk__key__height"
		android:background="@drawable/fdk__button_state_list__cursor_right__only"
        android:layout_marginTop="@dimen/fdk__key__margin_top" />
    
  </LinearLayout>