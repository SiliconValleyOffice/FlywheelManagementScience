<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.flywheelms.library.fms.wizard.CreateFmmWizardStepFlipper
        android:id="@+id/gcg__wizard__step_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- page 1 -->
        <com.flywheelms.library.fms.wizard.step.CreateFmmHeadlineWizardStepView
            android:id="@+id/wizard_step__headline"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- page 5 -->
        <com.flywheelms.library.fms.wizard.step.CreateFmmDoItNowWizardStepView
            android:id="@+id/wizard_step__summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- page 4 -->
        <com.flywheelms.library.fms.wizard.step.CreateFmmGovernanceWizardStepView
            android:id="@+id/wizard_step__governance"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- page 3 -->
        <com.flywheelms.library.fms.wizard.step.CreateFmmOrganizationWizardStepView
            android:id="@+id/wizard_step__organization"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- page 2 -->
        <com.flywheelms.library.fms.wizard.step.CreateFmmChooseTemplateWizardStepView
            android:id="@+id/wizard_step__fmm_template"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        
    </com.flywheelms.library.fms.wizard.CreateFmmWizardStepFlipper>

</LinearLayout>
