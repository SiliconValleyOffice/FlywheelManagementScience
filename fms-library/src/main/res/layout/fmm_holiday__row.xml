<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gcg="http://schemas.android.com/apk/res-auto"
    android:id="@+id/holiday_break__row__layout"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:gravity="bottom"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/holiday__checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="1dp"
        android:checked="true" />

    <ImageView
        android:id="@+id/holiday__image"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@drawable/gcg__unspecified_glyph"/>

    <TextView
        android:id="@+id/holiday__text"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="1dp"
        android:text="@string/gcg__undefined"/>

    <com.flywheelms.gcongui.gcg.widget.date.GcgWidgetDatePicker
        android:id="@+id/holiday__day"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="3dp"
        gcg:labelText="Date"
        gcg:dataFormat="5" />

    <com.flywheelms.gcongui.gcg.widget.date.GcgWidgetDatePicker
        android:id="@+id/holiday__break_first_day"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="3dp"
        gcg:labelText="First Day"
        gcg:dataFormat="5" />

    <com.flywheelms.gcongui.gcg.widget.date.GcgWidgetDatePicker
        android:id="@+id/holiday__break_last_day"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        gcg:labelText="Last Day"
        gcg:dataFormat="5" />

</LinearLayout>