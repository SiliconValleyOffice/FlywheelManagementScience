<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gcg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gcg__dialog__background"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="15dp" >

        <TextView
            android:id="@+id/dialog__explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="19dp"
            android:gravity="center_horizontal"
            android:background="@color/gcg__dialog_info__background"
            android:textColor="@color/gcg__dialog_info__text"
            android:textSize="18sp"
            android:text="@string/flywheel_cadence__creation__explanation" />

        <TextView
            android:id="@+id/dialog__explanation_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gcg__dialog_info__border" />

        <com.flywheelms.gcongui.gcg.container.GcgContainerGroupBoxLinear
            android:id="@+id/group_box__parent_node"
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="left|top"
            android:orientation="vertical"
            gcg:borderStyle="3"
            gcg:headingText="For Parent"
            gcg:headingGravity="left" >

            <com.flywheelms.library.fms.widget.text_view.FmmNodeTypeWidgetTextView
                android:id="@+id/fmm_node__type__parent_node"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp" />

            <com.flywheelms.library.fms.widget.text_view.HeadlineWidgetTextView
                android:id="@+id/headline__parent_node"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="69dp"
                gcg:headingText="For Parent" />
        </com.flywheelms.gcongui.gcg.container.GcgContainerGroupBoxLinear>

        <com.flywheelms.gcongui.gcg.container.GcgContainerGroupBoxLinear
            android:id="@+id/group_box__cadence_parameters"
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:gravity="left|top"
            android:orientation="vertical"
            gcg:borderStyle="3"
            gcg:headingText="Cadence Parameters"
            gcg:headingGravity="left" >

            <com.flywheelms.library.fms.widget.spinner.CadenceDurationWidgetSpinner
                android:id="@+id/cadence_duration__spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"
                android:text="@string/cadence_duration" />

            <CheckBox
                android:id="@+id/enable_holiday_slack__checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:checked="true"
                android:text="@string/enable_holiday_slack" />

            <com.flywheelms.library.fms.widget.spinner.HolidaySlackOptionWidgetSpinner
                android:id="@+id/holiday_slack_option__spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="50dp"
                android:text="@string/holiday_slack__option" />
        </com.flywheelms.gcongui.gcg.container.GcgContainerGroupBoxLinear>
    </LinearLayout>

</LinearLayout>