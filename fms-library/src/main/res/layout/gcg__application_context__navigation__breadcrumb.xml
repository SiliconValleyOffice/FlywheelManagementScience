<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="left|center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/gcg_context__breadcrumb__image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="45dp"
        android:contentDescription="Breadcrumb image"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/gcg_context__breadcrumb__headine"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/w3c__white"
        android:textSize="18sp"
        android:contentDescription="Breadcrumb headline"
        tools:ignore="HardcodedText" />

</LinearLayout>