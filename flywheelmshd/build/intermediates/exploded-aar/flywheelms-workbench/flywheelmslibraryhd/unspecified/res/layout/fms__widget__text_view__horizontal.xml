<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GcgWidgetRowHorizontal" >
    
    <Button
        android:id="@+id/copy_button"
        android:layout_width="27dp"
        android:layout_height="21dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/gcg__button_state_list__action__copy__wide"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/widget_label"
        style="@style/GcgWidgetLabelHorizontalContainer"
        android:layout_toRightOf="@id/copy_button"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/widget_data"
        style="@style/GcgWidgetData"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_toRightOf="@id/widget_label"
        android:layout_centerVertical="true"
        android:background="@drawable/gcg__null_drawable"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>
