<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:gcg="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gcg__perspective__background"
    android:orientation="vertical" >

    <include
        android:id="@+id/gcg_view_flipper__title_bar__include"
        layout="@layout/gcg__view_flipper__title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5" >

        <com.flywheelms.library.fms.component.FmsGovernanceComponent
            android:id="@+id/governance_component__facilitator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            gcg:thumbPad="left"
            gcg:governanceRole="Facilitator" />

        <com.flywheelms.library.fms.component.FmsGovernanceComponent
            android:id="@+id/governance_component__customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            gcg:thumbPad="right"
            gcg:governanceRole="Customer" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5" >

        <com.flywheelms.library.fms.component.FmsGovernanceComponent
            android:id="@+id/governance_component__sponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            gcg:thumbPad="left"
            gcg:governanceRole="Sponsor" />

        <com.flywheelms.library.fms.component.FmsGovernanceComponent
            android:id="@+id/governance_component__administrator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            gcg:thumbPad="right"
            gcg:governanceRole="Administrator" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/home/sstamps/AndroidDevelopment/flywheelms-workbench/flywheelmslibraryhd/src/main/res/layout-land/fms_view__governance.xml -->