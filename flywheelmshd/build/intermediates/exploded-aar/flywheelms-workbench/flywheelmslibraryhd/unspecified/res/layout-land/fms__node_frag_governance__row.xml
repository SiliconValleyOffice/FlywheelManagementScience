<TableRow xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_headings"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >
        
	    <TextView
	        android:id="@+id/governance__role__data"
	        style="@style/TableDataEvenColumn"
	        android:layout_width="@dimen/governance__role__width" />
	    
	    <ImageView
	        android:id="@+id/governance__role__image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingBottom="6dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/governance__community_member__data"
        style="@style/TableDataOddColumn"
        android:layout_width="@dimen/governance__community_member__width" />

    <TextView
        android:id="@+id/governance__commitment__data"
        style="@style/TableDataOddColumn"
        android:layout_width="@dimen/governance__commitment__width" />

    <TextView
        android:id="@+id/governance__commitment_timestamp__data"
        style="@style/TableDataEvenColumn"
        android:layout_width="@dimen/governance__timestamp__width" />

    <TextView
        android:id="@+id/governance__proposed_by__data"
        style="@style/TableDataOddColumn"
        android:layout_width="@dimen/governance__community_member__width" />

    <TextView
        android:id="@+id/governance__proposed_timestamp__data"
        style="@style/TableDataEvenColumn"
        android:layout_width="@dimen/governance__timestamp__width" />

    <TextView
        android:id="@+id/governance__locked_status__data"
        style="@style/TableDataOddColumn"
        android:layout_width="@dimen/governance__lock_status__width" />

    <TextView
        android:id="@+id/governance__locked_by__data"
        style="@style/TableDataOddColumn"
        android:layout_width="@dimen/governance__community_member__width" />

    <TextView
        android:id="@+id/governance__locked_timestamp__data"
        style="@style/TableDataEvenColumn"
        android:layout_width="@dimen/governance__timestamp__width" />

