<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/GcgWidgetRowHorizontal"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/widget__label"
        style="@style/GcgWidgetLabelHorizontalContainer"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/widget__add__button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_state_list__action__add_new" />

    <ListView
        android:id="@+id/widget__list_view"
        style="@style/GcgWidgetData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/widget_label"
        android:layout_toLeftOf="@id/widget__add__button"
        android:layout_centerVertical="true"
        android:background="@color/gcg__list__background"
        android:fadeScrollbars="false"
        android:hint="select Android contacts"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        tools:ignore="HardcodedText" />

</RelativeLayout><!-- From: file:/home/sstamps/AndroidDevelopment/flywheelms-workbench/flywheelmslibraryhd/src/main/res/layout/gcg__widget__list_view__horizontal.xml -->