<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/fms__wizard_step__background__last"
    android:orientation="vertical" >

    <include
        android:id="@+id/gcg_view_flipper__title_bar__include"
        layout="@layout/gcg__view_flipper__title_bar" />

    <LinearLayout
        android:id="@+id/wizard_step_body__wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <TableLayout
            android:layout_width="325dp"
            android:layout_height="280dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/group_box__background_1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/group_box__padding_bottom"
            android:paddingLeft="@dimen/group_box__padding_left"
            android:paddingRight="@dimen/group_box__padding_right"
            android:paddingTop="@dimen/group_box__padding_top" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <TextView
                    style="@style/GroupLabel"
                    android:text="Content Summary" />
            </TableRow>

            <TableRow
                android:id="@+id/row__a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingBottom="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="8dp"
                android:paddingTop="15dip" >
                
                <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            	android:fadeScrollbars="false" >

                <TextView
                    android:id="@+id/summary__content"
                    style="@style/NodeLabel"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:text="Content summary..." />
                </ScrollView>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="555dp"
            android:layout_height="280dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/group_box__background_1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/group_box__padding_bottom"
            android:paddingLeft="@dimen/group_box__padding_left"
            android:paddingRight="@dimen/group_box__padding_right"
            android:paddingTop="@dimen/group_box__padding_top" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <TextView
                    style="@style/GroupLabel"
                    android:text="Destination Summary" />
            </TableRow>

            <TableRow
                android:id="@+id/row__b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="8dp"
                android:paddingTop="15dip" >
                
                <ScrollView
                android:layout_width="310dp"
                android:layout_height="match_parent"
            	android:fadeScrollbars="false" >

                <TextView
                    android:id="@+id/summary__destination_1"
                    style="@style/NodeLabel"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:text="Destination summary 1..." />
                </ScrollView>
                
                <ScrollView
                android:layout_width="230dp"
                android:layout_height="match_parent"
                    android:gravity="left"
            	android:fadeScrollbars="false" >

                <TextView
                    android:id="@+id/summary__destination_2"
                    style="@style/NodeLabel"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:text="Destination summary 2..." />
                </ScrollView>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <include
        android:id="@+id/gcg_wizard__navigation_bar__include"
        layout="@layout/gcg__wizard__navigation_bar" />

</LinearLayout><!-- From: file:/home/sstamps/AndroidDevevlopment/flywheelms-workbench/flywheelmslibraryhd/src/main/res/layout-land/fmm_node__publication__wizard_step__do_it_now.xml -->