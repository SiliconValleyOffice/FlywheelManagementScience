<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gcg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gcg__dialog__background"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="15dp" >

        <com.flywheelms.library.fms.widget.text_view.FmmNodeIdWidgetTextView
            android:id="@+id/fmm_node_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            gcg:labelWidth="200" />

        <com.flywheelms.library.fms.widget.text_view.FmmNodeTypeWidgetTextView
            android:id="@+id/fmm_node__type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            gcg:labelWidth="200" />

        <com.flywheelms.library.fms.widget.text_view.HeadlineWidgetTextView
            android:id="@+id/headline__original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            gcg:labelWidth="200"
            gcg:labelHint="Original"
            gcg:enableCopyButton="true" />

        <com.flywheelms.library.fms.widget.edit_text.HeadlineWidgetEditText
            android:id="@+id/headline__new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            gcg:labelWidth="200"
            gcg:labelHint="New" />
    </LinearLayout>

</LinearLayout><!-- From: file:/home/sstamps/AndroidDevevlopment/flywheelms-workbench/flywheelmslibraryhd/src/main/res/layout/fmm__headline_node__headline_edit__dialog.xml -->