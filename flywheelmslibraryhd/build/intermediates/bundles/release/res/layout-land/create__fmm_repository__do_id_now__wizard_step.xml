<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gcg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fms__wizard_step_1__background"
    android:clickable="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/gcg_view_flipper__title_bar__include"
        layout="@layout/gcg__view_flipper__title_bar" />

    <RelativeLayout
        android:id="@+id/wizard_step_body__wrapper"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <com.flywheelms.library.gcg.widget.GcgWidgetTextViewSummaryBox
            android:id="@+id/summary__step_1"
            android:layout_width="440dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            gcg:labelText="@string/create__fmm_repository__headline__summary_box" />

        <com.flywheelms.library.gcg.widget.GcgWidgetTextViewSummaryBox
            android:id="@+id/summary__step_3"
            android:layout_width="440dp"
            android:layout_height="170dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/summary__step_1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13dp"
            gcg:labelText="@string/create__fmm_repository__organization__summary_box" />

        <com.flywheelms.library.gcg.widget.GcgWidgetTextViewSummaryBox
            android:id="@+id/summary__step_2"
            android:layout_width="440dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="24dp"
            gcg:labelText="@string/create__fmm_repository__fmm_template__summary_box" />

        <com.flywheelms.library.gcg.widget.GcgWidgetTextViewSummaryBox
            android:id="@+id/summary__step_4"
            android:layout_width="440dp"
            android:layout_height="170dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/summary__step_2"
            android:layout_marginTop="13dp"
            android:layout_marginRight="24dp"
            gcg:labelText="@string/create__fmm_repository__governance__summary_box" />
        
    </RelativeLayout>

    <include
        android:id="@+id/gcg_wizard__navigation_bar__include"
        layout="@layout/gcg__wizard__navigation_bar" />

</LinearLayout>
